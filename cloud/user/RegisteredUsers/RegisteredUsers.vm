  },
  "update" : {
      "expression" : "SET postCount = :zero",
      "expressionValues": {
          ":zero" : { "N": 0 }
      }
  },
  "condition" : {
        "expression"       : ":currentDate - postCountStartDate > :postCountEffectivePeriod",
        "expressionValues" : {
            ":currentDate" : $currentDate,
            ":postCountEffectivePeriod" : $postCountEffectivePeriod
        }
    }
}

